<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <ImageButton
            android:id="@+id/page_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:src="@drawable/page_back_icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:fontFamily="@font/pretendard_semibold"
            android:gravity="center"
            android:text="회원가입"
            android:textColor="#000000" />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginBottom="38dp"
        android:background="#D3D3D3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/id_input"
                android:layout_gravity="center"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="아이디"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/id_input"
                android:layout_width="200dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/t1"
                android:layout_weight="4"
                android:background="@drawable/round_border"
                android:fontFamily="@font/pretendard_medium"
                android:fontWeight="400"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/check_duplicate"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/id_input"
                android:layout_weight="4"
                android:background="@drawable/button_background"
                android:elevation="30dp"
                android:text="중복확인"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/warning_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_input"
                android:layout_alignLeft="@id/id_input"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/pretendard_medium"
                android:text="✓ 아이디를 입력해주세요"
                android:textColor="#FF6E65"
                android:textSize="12dp" />

            <LinearLayout
                android:id="@+id/pw_input_layout"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@id/warning_id"
                android:layout_alignLeft="@id/id_input"
                android:background="@drawable/round_border"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/pw_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.9"
                    android:background="@null"
                    android:fontFamily="@font/pretendard_medium"
                    android:fontWeight="400"
                    android:inputType="textPassword"
                    android:paddingLeft="15dp"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <ImageButton
                    android:id="@+id/show_pw_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.1"
                    android:background="#FFFFFF"
                    android:src="@drawable/closedeye" />
            </LinearLayout>

            <TextView
                android:id="@+id/warning_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pw_input_layout"
                android:layout_alignLeft="@id/id_input"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/pretendard_medium"
                android:text="✓ 비밀번호를 입력해주세요"
                android:textColor="#FF6E65"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/t1"
                android:layout_alignTop="@id/pw_input_layout"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:layout_toLeftOf="@id/pw_input_layout"
                android:fontFamily="@font/pretendard_medium"
                android:text="비밀번호"
                android:textColor="#000000"
                android:textSize="18dp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginBottom="30dp"
        android:background="#D3D3D3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="30dp"
                android:layout_weight="3"
                android:fontFamily="@font/pretendard_medium"
                android:text="이름"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/name_input"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_weight="16"
                android:paddingLeft="15dp"
                android:background="@drawable/round_border"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="#000000"
                android:textSize="20dp"
                android:inputType="textPersonName"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="30dp"
                android:layout_weight="6"
                android:fontFamily="@font/pretendard_medium"
                android:text="전화번호"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/first_phone_input"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:paddingLeft="5dp"
                android:background="@drawable/round_border"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="#000000"
                android:textSize="20dp"
                android:maxLength="4"
                android:inputType="number"  />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"
                android:text="-"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/middle_phone_input"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:paddingLeft="5dp"
                android:background="@drawable/round_border"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="#000000"
                android:textSize="20dp"
                android:maxLength="4"
                android:inputType="number"  />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"
                android:text="-"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/last_phone_input"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:paddingLeft="5dp"
                android:background="@drawable/round_border"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="#000000"
                android:textSize="20dp"
                android:maxLength="4"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="30dp"
                android:layout_weight="3"
                android:fontFamily="@font/pretendard_medium"
                android:text="생년월일"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/birthday_input"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_weight="12"
                android:paddingLeft="15dp"
                android:background="@drawable/round_border"
                android:fontFamily="@font/pretendard_medium"
                android:hint="YYYYMMDD"
                android:textColor="#000000"
                android:textSize="20dp"
                android:maxLength="8"
                android:inputType="number"/>
        </LinearLayout>

        <Button
            android:id="@+id/join_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/id_input"
            android:layout_weight="4"
            android:background="@drawable/button_background"
            android:elevation="30dp"
            android:text="회원가입"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>