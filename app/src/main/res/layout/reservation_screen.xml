<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingBotton="30dp">

                <ImageButton
                    android:id="@+id/page_back"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:src="@drawable/page_back_icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:fontFamily="@font/pretendard_semibold"
                    android:gravity="center"
                    android:text="예약하기"
                    android:textColor="#000000" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginBottom="38dp"
                android:background="#D3D3D3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <TextView
                    android:id="@+id/hospital_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="병원이름"
                    android:textColor="#000000"
                    android:textSize="30dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sky_round_border"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <CalendarView
                        android:id="@+id/select_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginBottom="38dp"
                android:background="#D3D3D3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="오전"
                        android:textColor="#000000"
                        android:textSize="dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/am1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/view_border"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="00:00" />

                        <RadioButton
                            android:id="@+id/am2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/view_border"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="00:00" />

                        <RadioButton
                            android:id="@+id/am3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/view_border"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="00:00" />

                        <RadioButton
                            android:id="@+id/am4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/view_border"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="00:00" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/am5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/view_border"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="00:00" />

                        <RadioButton
                            android:id="@+id/am6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/view_border"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="00:00" />

                        <RadioButton
                            android:id="@+id/am7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/view_border"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="00:00" />

                        <RadioButton
                            android:id="@+id/am8"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/view_border"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="00:00" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="오전"
                        android:textColor="#000000"
                        android:textSize="dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/pm1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/view_border"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="00:00" />

                        <RadioButton
                            android:id="@+id/pm2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/view_border"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="00:00" />

                        <RadioButton
                            android:id="@+id/pm3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/view_border"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="00:00" />

                        <RadioButton
                            android:id="@+id/pm4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/view_border"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="00:00" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/pm5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/view_border"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="00:00" />

                        <RadioButton
                            android:id="@+id/pm6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/view_border"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="00:00" />

                        <RadioButton
                            android:id="@+id/pm7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/view_border"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="00:00" />

                        <RadioButton
                            android:id="@+id/pm8"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/view_border"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="00:00" />
                    </LinearLayout>
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginBottom="38dp"
                android:background="#D3D3D3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <Button
                    android:id="@+id/reservation_button"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/id_input"
                    android:layout_weight="4"
                    android:background="@drawable/button_background"
                    android:elevation="30dp"
                    android:text="예약"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>